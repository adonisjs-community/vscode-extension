{
	"name": "adonisjs",
	"displayName": "AdonisJS",
	"description": "Official extension for AdonisJS framework",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.39.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"adonis",
		"commands"
	],
	"activationEvents": [
		"workspaceContains:**/.adonisrc.json"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"title": "ðŸš€ Adonis: Build",
				"command": "adonisjs.build"
			},
			{
				"title": "ðŸš€ Adonis: Invoke",
				"command": "adonisjs.invoke"
			},
			{
				"title": "ðŸš€ Adonis: DB Seed",
				"command": "adonisjs.db.seed"
			},
			{
				"title": "ðŸš€ Adonis: Make Command",
				"command": "adonisjs.make.command"
			},
			{
				"title": "ðŸš€ Adonis: Make Controller",
				"command": "adonisjs.make.controller"
			},
			{
				"title": "ðŸš€ Adonis: Make Exception",
				"command": "adonisjs.make.exception"
			},
			{
				"title": "ðŸš€ Adonis: Make Listener",
				"command": "adonisjs.make.listener"
			},
			{
				"title": "ðŸš€ Adonis: Make Middleware",
				"command": "adonisjs.make.middleware"
			},
			{
				"title": "ðŸš€ Adonis: Make Preload File",
				"command": "adonisjs.make.prldfile"
			},
			{
				"title": "ðŸš€ Adonis: Make Provider",
				"command": "adonisjs.make.provider"
			},
			{
				"title": "ðŸš€ Adonis: Make Validator",
				"command": "adonisjs.make.validator"
			},
			{
				"title": "ðŸš€ Adonis: Make View",
				"command": "adonisjs.make.view"
			},
			{
				"title": "ðŸš€ Adonis: Make Migration",
				"command": "adonisjs.make.migration"
			},
			{
				"title": "ðŸš€ Adonis: Make Model",
				"command": "adonisjs.make.model"
			},
			{
				"title": "ðŸš€ Adonis: Make Seed",
				"command": "adonisjs.make.seed"
			},
			{
				"title": "ðŸš€ Adonis: Migration Rollback",
				"command": "adonisjs.migration.rollback"
			},
			{
				"title": "ðŸš€ Adonis: Migration Run",
				"command": "adonisjs.migration.run"
			},
			{
				"title": "ðŸš€ Adonis: Migration Status",
				"command": "adonisjs.migration.status"
			}
		],
		"configuration": {
			"type": "object",
			"title": "AdonisJS",
			"properties": {
				"adonisjs.tasks.disableOptionalValuePrompts": {
					"type": "boolean",
					"description": "Disable showing of prompts for optional fields. All commands will be ran with default values",
					"default": false
				},
				"adonisjs.tasks.adonisExecutable": {
					"type": "string",
					"description": "Executable path for Adonis CLI",
					"default": "node ace"
				},
				"adonisjs.tasks.maxBuffer": {
					"type": "integer",
					"description": "Buffer size for stdout and stderr",
					"default": 204800
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"format": "prettier --write .",
		"lint": "eslint . --ext=.ts",
		"compile": "npm run lint && tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.39.0",
		"eslint": "^7.11.0",
		"eslint-config-prettier": "^6.12.0",
		"eslint-plugin-adonis": "^1.0.15",
		"eslint-plugin-prettier": "^3.1.4",
		"mocha": "^10.2.0",
		"prettier": "^2.1.2",
		"typescript": "^3.3.1",
		"vscode-test": "^1.2.0"
	},
	"dependencies": {
		"glob": "^7.1.5",
		"strip-ansi": "^6.0.0"
	}
}
